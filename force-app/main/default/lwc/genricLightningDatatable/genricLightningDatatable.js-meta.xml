<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>57.0</apiVersion>
	<isExposed>true</isExposed>
	<targets>
		<target>lightning__RecordPage</target>
		<target>lightning__AppPage</target>
		<target>lightning__HomePage</target>
		<target>lightning__Tab</target>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
		<target>lightningCommunity__Page_Layout</target>
	</targets>
	 <targetConfigs>  
        <targetConfig targets="lightning__HomePage,lightning__RecordPage,lightning__AppPage">
            <property name="isFeildSetPresent" type="Boolean" label="Field set present."/>
			<property name="isDeleteRecords" type="Boolean" label="Delete record from data table."/>
			<property name="isAddRecords" type="Boolean" label="Add record from data table."/>
			<property name="isEditRecords" type="Boolean" label="Edit record from data table."/>
			<property name="isShowPagination" type="Boolean" label="Show pagination for data table."/>
			<property name="displayLog" type="Boolean" label="Display console log."/>
			<property name="searchData" type="Boolean" label="Search data on row."/>
			<property name="objectApiName" type="String" label="Enter the object api name." required="true"/>
            <property name="fieldSetName" type="String"  label="Enter field set name."/>
			<property name="coloumns" type="String" label="Enter the fields api name if field set is blank (comma seprately)."/>
			<property name="lightningDataTableHeight" type="String" label="Enter height of data table in px (use number only)."/>
			<property name="recordShowOnDataTable" type="String" label="Specify the number of records you'd like to view per page in the data table."/>
			<property name="headerOfDataTable" type="String" label="Provide the header for the data table."/>
        </targetConfig>
    </targetConfigs>
   
</LightningComponentBundle>